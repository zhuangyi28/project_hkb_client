<!-- 密码重置 -->

<div class="hkb_password_inputlist">

    <!-- 手机号码 -->

    <div class="password_phone">
        <label >
            <img src="../../images/icon1.png"/>
            <input class="reset_phone_icon" type="text" pattern="[0-9]*" placeholder="请输入手机号码" maxlength="11">
        </label>

        <div class="reset_phone_active">
            <div class="phone_reset_text">获取验证码
            </div>

        </div>


    </div>
    <hr/>

    <!-- 验证码 -->

    <div class="password_pen">
        <label >
            <img src="../../images/icon2.png"/>
            <input class="reset_pen_icon" type="text" pattern="[0-9]*" placeholder="请输入验证码" maxlength="6">
        </label>
    </div>
    <hr/>

    <!-- 密码 -->

    <div class="password_key">
        <label>
            <img src="../../images/icon3.png"/>
            <input class="reset_key_icon" type="password" pattern="[0-9]*" placeholder="请输入6位数字交易密码" maxlength="6">

        </label>
    </div>
    <hr/>

    <div class="password_reset_repeat">* 交易密码长度为6位数字</div>


</div>